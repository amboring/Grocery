<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cart_buttons"
    android:layout_gravity="right"
    android:layout_height="wrap_content">
    <ImageButton android:id="@+id/button_less"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/cart_buttons"
        app:layout_constraintBottom_toBottomOf="@id/cart_buttons"
        app:layout_constraintEnd_toStartOf="@id/edit_text_quantity"
        android:src="@drawable/ic_baseline_navigate_before_24"/>
    <!--            <com.google.android.material.textfield.TextInputLayout-->
    <!--                android:layout_width="0dp"-->
    <!--                android:id="@+id/layout_edit_text_quantity"-->
    <!--                android:layout_height="match_parent">-->
    <!--                <EditText android:id="@+id/edit_text_quantity"-->
    <!--                    android:layout_width="match_parent"-->
    <!--                    android:layout_height="wrap_content"-->
    <!--                    android:text="1"-->
    <!--                    android:textSize="20dp"/>-->
    <!--            </com.google.android.material.textfield.TextInputLayout>-->
    <TextView android:id="@+id/edit_text_quantity"
        android:layout_width="wrap_content"
        android:text="1"
        android:textSize="15dp"
        app:layout_constraintStart_toEndOf="@id/button_less"
        app:layout_constraintTop_toTopOf="@id/cart_buttons"
        app:layout_constraintBottom_toBottomOf="@id/cart_buttons"
        android:layout_height="match_parent"/>


    <ImageButton android:id="@+id/button_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/cart_buttons"
        app:layout_constraintStart_toEndOf="@id/edit_text_quantity"
        app:layout_constraintEnd_toEndOf="@id/cart_buttons"
        android:src="@drawable/ic_baseline_navigate_next_24"/>

</androidx.constraintlayout.widget.ConstraintLayout>
