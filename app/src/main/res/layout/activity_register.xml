<LinearLayout android:orientation="vertical"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent">
    <include layout="@layout/app_bar"/>
    <LinearLayout android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="20dp"
        android:weightSum="10"
        android:background="@color/rice"
        xmlns:android="http://schemas.android.com/apk/res/android" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:clickable="true"
            android:textSize="70dp"
            android:gravity="center"
            android:textStyle="bold"
            android:text="Register"/>


        <EditText android:id="@+id/edittext_firstname"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/ic_baseline_person_24"
            android:hint=" First Name"/>

        <EditText android:id="@+id/edittext_email"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/ic_baseline_email_24"
            android:hint=" Email"/>
        <EditText android:id="@+id/edittext_mobile"
            android:layout_width="match_parent"
            android:drawableLeft="@drawable/ic_baseline_phone_android_24"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:hint=" Mobile"/>
        <EditText android:id="@+id/edittext_password"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/ic_baseline_lock_24"
            android:hint=" Password (at least 6 characters)"/>


        <Button android:id="@+id/button_register"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:textSize="24dp"
            android:backgroundTint="@color/peach"
            android:text="Register"/>

        <TextView android:id="@+id/text_clickable_login"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clickable="true"
            android:textSize="15dp"
            android:gravity="bottom"
            android:text="Already have an account? Login"/>

    </LinearLayout>
</LinearLayout>